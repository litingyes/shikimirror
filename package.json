{
  "name": "@shikimirror/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6",
  "description": "Integrate Shiki into CodeMirror",
  "author": "litingyes <luz.liting@gmail.com> (https://litingyes.top/)",
  "license": "MIT",
  "homepage": "https://github.com/litingyes/shikimirror#readme",
  "bugs": {
    "url": "https://github.com/litingyes/shikimirror/issues"
  },
  "keywords": [
    "shiki",
    "codemirror"
  ],
  "scripts": {
    "build": "pnpm -F shikimirror -F \"@shikimirror/*\" build",
    "playground:dev": "pnpm -F @shikimirror/playground dev",
    "playground:build": "pnpm -F @shikimirror/playground build",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "commit": "git-cz",
    "release": "bumpp -r",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@types/node": "22",
    "bumpp": "^9.10.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "inquirer": "^12.3.3",
    "lint-staged": "^15.4.3",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
